---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
// import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Gobierno de la Republica de Hoso',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: 'Conoce más', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Gobierno de la <span class="text-accent dark:text-white highlight">República de Hoso</span>
    </Fragment>

    <Fragment slot="subtitle">
      Bienvenido al sitio oficial del gobierno de la República de Hoso. <br>
      Explorando innovación tecnológica, respeto al medio ambiente y avances científicos.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Características"
    title="Lo que ofrecemos en Hoso"
    subtitle="Descubre las principales iniciativas y proyectos que impulsan el desarrollo en nuestra república."
    items={[
      {
        title: 'Innovación Tecnológica',
        description: 'Implementamos tecnología de punta para mejorar la calidad de vida de nuestros ciudadanos.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Respeto al Medio Ambiente',
        description: 'Desarrollamos proyectos sostenibles y ecológicos para preservar nuestro entorno natural.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Avances Científicos',
        description: 'Fomentamos la investigación y el desarrollo en diversas áreas científicas.',
        icon: 'tabler:flask',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Dentro de la República"
    title="Visión y Misión de Hoso"
    items={[
      {
        title: 'Compromiso con el Futuro',
        description: 'Construimos un futuro mejor a través de iniciativas innovadoras y sostenibles.',
      },
      {
        title: 'Educación y Cultura',
        description: 'Promovemos el conocimiento y la cultura como pilares de nuestra sociedad.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Imagen representativa',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Nuestro compromiso</h3>
      Trabajamos para el bienestar de nuestros ciudadanos y el desarrollo de nuestra nación.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Proyectos Destacados"
    subtitle="Conoce los proyectos más importantes en los que estamos trabajando."
    tagline="Proyectos"
    items={[
      {
        title: 'Microcoin',
        description: 'Una moneda virtual basada en tecnología blockchain para comercio entre micronaciones.',
        icon: 'tabler:coin',
      },
      {
        title: 'Lanzamiento de Satélites',
        description: 'Proyectos de investigación espacial con el lanzamiento de satélites tipo CANSAT.',
        icon: 'tabler:satellite',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Descubre más contenido en nuestro Blog"
    information="Nuestro blog ofrece artículos sobre los avances y proyectos más recientes en la República de Hoso. ¡Mantente informado!"
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas Frecuentes"
    subtitle="Respuestas a las preguntas más comunes sobre la República de Hoso."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '¿Qué es la República de Hoso?',
        description: 'Es una micronación que promueve la innovación tecnológica, el respeto al medio ambiente y los avances científicos.',
      },
      {
        title: '¿Cómo puedo participar en los proyectos?',
        description: 'Puedes involucrarte a través de nuestras plataformas de colaboración y redes sociales.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Proyectos Completados', amount: '150' },
      { title: 'Miembros Activos', amount: '2.4K' },
      { title: 'Iniciativas en Curso', amount: '48' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Únete a Nosotros',
        href: '#',
        target: '_blank',
        icon: 'tabler:user-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Sé parte de la <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Revolución Tecnológica</span>
    </Fragment>

    <Fragment slot="subtitle">
      Únete a nuestros esfuerzos por un futuro más brillante y sostenible.
    </Fragment>
  </CallToAction>
</Layout>
